    <main>
      <div class="clinician_header">
        <h1>Registration Board</h1>
      </div>

      <form id="registerPat" action="" method="POST">
        <div>
          <label> Enter email: </label>
          <input
            type="email"
            name="email"
            placeholder="Enter email"
            value=""
            required
          />
        </div>

        <br />
        <div>
          <label> Enter password: </label>
          <input
            type="password"
            name="password"
            placeholder="Enter password"
            value=""
            required
          />
        </div>
        <br />
        <div>
          <label> Enter First Name: </label>
          <input
            type="text"
            name="firstName"
            placeholder="Enter First Name"
            value=""
            required
          />
        </div>
        <br />
        <div>
          <label> Enter Last Name: </label>
          <input
            type="text"
            name="lastName"
            placeholder="Enter Last Name"
            value=""
            required
          />
        </div>
        <br />
        <div>
          <label> Enter Screen Name: </label>
          <input
            type="text"
            name="screenName"
            placeholder="Enter Screen Name"
            value=""
            required
          />
        </div>
        <br />
        <div>
          <label> Enter Year of Birth: </label>
          <input
            type="number"
            min="1900"
            max="2022"
            name="yearOfBirth"
            value=""
            required
          />
        </div>
        <br />
        <div>
          <label> Enter Brief Text Bio: </label>
          <input
            type="text"
            name="textBio"
            placeholder="Enter Breif Text Bio"
            value=""
          />
        </div>
        <br />
        <div>
          <label> Enter Support Message: </label>
          <input
            type="text"
            name="supportMessage"
            placeholder="Enter Support Message"
            value=""
          />
        </div>
        <br />
        <div>
          {{! custom radio button }}
          <label> This Patient need to record blood glucose level: </label>
          <input
            type="radio"
            id="bgl_yes"
            name="bgl"
            value="true"
            required="required"
          />
          <label for="bgl_yes"> Yes </label>
          <input type="radio" id="bgl_no" name="bgl" value="false" />
          <label for="bgl_no"> No </label>
        </div>
        <br />
        <div>
          <label> This Patient need to record weight: </label>
          <input
            type="radio"
            id="weight_yes"
            name="weight"
            value="true"
            required="required"
          />
          <label for="weight_yes"> Yes </label>
          <input type="radio" id="weight_no" name="weight" value="false" />
          <label for="weight_no"> No </label>
        </div>
        <br />
        <div>
          <label> This Patient need to record doses of insulin taken: </label>
          <input
            type="radio"
            id="doit_yes"
            name="doit"
            value="true"
            required="required"
          />
          <label for="doit_yes"> Yes </label>
          <input type="radio" id="doit_no" name="doit" value="false" />
          <label for="doit_no"> No </label>
        </div>
        <br />
        <div>
          <label> This Patient need to record exercise: </label>
          <input
            type="radio"
            id="exercise_yes"
            name="exercise"
            value="true"
            required="required"
          />
          <label for="exercise_yes"> Yes </label>
          <input type="radio" id="exercise_no" name="exercise" value="false" />
          <label for="exercise_no"> No </label>
        </div>
        <br />
        <button type="submit"> Register </button>
      </form>
      <a href="">
        <button> Back </button>
      </a>
      <br /><br />
    </main>
