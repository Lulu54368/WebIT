<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/about.css" />
    <title>Register Patient</title>
  </head>

  <body>
    <header>
      <script>
        var _hmt = _hmt || []; (function() { var hm =
        document.createElement("script"); hm.src =
        "//hm.baidu.com/hm.js?73c27e26f610eb3c9f3feb0c75b03925"; var s =
        document.getElementsByTagName("script")[0];
        s.parentNode.insertBefore(hm, s); })();
      </script>

      <ul class="topnav">
        <li><a href="/clinician/{{c_id}}">Dashboard</a></li>
        <li><a href="/clinician/{{c_id}}/comments">Patient's Comments</a></li>
        <li><a href="threshold">Thresholds</a></li>
        <li><a href="support">Messages</a></li>
        <li><a class="active" href="register">Register Patient</a></li>
        <li><a href="/clinician/aboutWebsite">About this Website</a></li>
        <li><a href="/clinician/aboutDiabetes">About Diabetes</a></li>
        <li><a href="/clinician/logout">Log Out</a></li>
        <li class="icon">
          <a
            href="javascript:void(0);"
            style="font-size:15px;"
            onclick="myFunction()"
          >â˜°</a>
        </li>
      </ul>

      <script>
        function myFunction() {
        document.getElementsByClassName("topnav")[0].classList.toggle("responsive");
        }
      </script>
    </header>

    <script src="/js/UpdatePatientBadge.js" defer></script>

    <aside>
      <div class="greeting">
        <h1> Hi Dr. {{c_name}}!</h1>
      </div>
      <div class="date">
        <h4 id="MyP">Today is {{view_date}} </h4>
        <script>
          var today = new Date(); var day = today.getDay(); var daylist =
          ["Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"];
          document.getElementById("MyP").innerHTML += daylist[day];
        </script>
      </div>

    </aside>

    <nav>
      <div class="sidenav">
        <img class="image" src="/page-logo.png" />
      </div>
    </nav>

    <main>
      {{#each flash}}
        <p class="alert">{{this}}</p>
      {{/each}}
      <div class="whole">
        <h1>Register Page</h1>
        <form method="post" action="">
          <div class="each">
            Enter e-mail:
            <input type="text" name="email" />
          </div>

          <div class="each">
            Enter Password:
            <input type="password" name="password" />
          </div>

          <div class="each">
            Enter First Name:
            <input type="text" name="name" />
          </div>

          <div class="each">
            Enter Last Name:
            <input type="text" name="last_name" />
          </div>

          <div class="each">
            Enter Screen Name:
            <input type="text" name="screen_name" />
          </div>

          <div class="each">
            Add Bio:
            <input type="text" name="bio" />
          </div>

          <div class="each">
            Year of Birth:
            <input type="text" name="year" />
          </div>

          <input type="submit" value="Submit" />
        </form>
      </div>
      <br /><br /><br /><br /><br /><br /><br /><br />
    </main>

  </body>

  <footer>
    <p>Copyright 2022 by Diabetes@Home. All Rights Reserved.</p>
  </footer>
</html>