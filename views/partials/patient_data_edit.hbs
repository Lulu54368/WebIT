              <td><input type="text" placeholder="Enter Comment..."  name="weightComment" id="patientcmt_weight" ></td>
              {{/if}}
              
              {{#unless data.weight.recorded}}
              <td> <button type="submit"> submit </td>
              {{/unless}}
            </tr>
          </form>
          
